@model TheBakeryApp.Pages.Venda.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Venda</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venda.Cliente.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venda.Cliente.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venda.DataVenda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venda.DataVenda)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venda.Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venda.Total)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venda.FormaPagamento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venda.FormaPagamento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venda.NumeroCupomFiscal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venda.NumeroCupomFiscal)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Venda.Cliente.Pontos)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Venda.Cliente.Pontos)
        </dd>
    </dl>
</div>

<div>
    <h4>Produtos</h4>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Venda.Produtos.First().Nome)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produto in Model.Venda.Produtos)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => produto.Nome)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Venda.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>