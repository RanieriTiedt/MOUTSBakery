@page
@model TheBakeryApp.Pages.Cliente.EditModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Cliente.Id" />
            <div class="form-group">
                <label asp-for="Cliente.Nome" class="control-label"></label>
                <input asp-for="Cliente.Nome" class="form-control" />
                <span asp-validation-for="Cliente.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.CPF" class="control-label"></label>
                <input asp-for="Cliente.CPF" class="form-control" />
                <span asp-validation-for="Cliente.CPF" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Cliente.Fidelizado" /> @Html.DisplayNameFor(model => model.Cliente.Fidelizado)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Pontos" class="control-label"></label>
                <input asp-for="Cliente.Pontos" class="form-control" />
                <span asp-validation-for="Cliente.Pontos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Voltar para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
