@page
@model TheBakeryApp.Pages.Cliente.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar novo Cliente</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Cliente.Nome" class="control-label"></label>
                <input asp-for="Cliente.Nome" class="form-control" />
                <span asp-validation-for="Cliente.Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.CPF" class="control-label"></label>
                <input asp-for="Cliente.CPF" class="form-control" />
                <span asp-validation-for="Cliente.CPF" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Cliente.Fidelizado" onchange="togglePontosField(this)" />
                    @Html.DisplayNameFor(model => model.Cliente.Fidelizado)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Cliente.Pontos" class="control-label"></label>
                <input asp-for="Cliente.Pontos" class="form-control" id="pontosField" disabled />
                <span asp-validation-for="Cliente.Pontos" class="text-danger"></span>
            </div>
            <script>
                function togglePontosField(checkbox) {
                    var pontosField = document.getElementById('pontosField');
                    pontosField.disabled = !checkbox.checked;

                    // Se o campo estiver habilitado, limpe seu valor (opcional)
                    if (!pontosField.disabled) {
                        pontosField.value = '';
                    }
                }
            </script>
            <div class="form-group">
                <input type="submit" value="Criar Cliente" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Voltar para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
